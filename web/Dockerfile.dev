FROM node:22-alpine

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install --frozen-lockfile

EXPOSE 5173

# Volume will be mounted from host for hot reload
# node_modules volume prevents host from overwriting container's node_modules
CMD ["pnpm", "run", "dev", "--", "--host", "0.0.0.0"]