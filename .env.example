# OpenAdopt Configuration
# Copy this file to .env and customize for your deployment

# Application
APP_NAME=OpenAdopt
APP_VERSION=0.1.0
DEBUG=false

# Database
DATABASE_URL=postgresql+asyncpg://openadopt:openadopt@db:5432/openadopt

# Security
# IMPORTANT: Generate a strong random secret key for production
# You can generate one with: openssl rand -hex 32
SECRET_KEY=change-this-in-production-use-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:8000

# Storage Configuration
# Options: local, s3, cloudinary
STORAGE_BACKEND=local

# Local Storage (default)
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_URL=http://localhost:8000/uploads

# AWS S3 Storage (uncomment to use)
# STORAGE_BACKEND=s3
# STORAGE_S3_BUCKET=your-bucket-name
# STORAGE_S3_REGION=us-east-1
# STORAGE_S3_ACCESS_KEY=your-access-key
# STORAGE_S3_SECRET_KEY=your-secret-key

# Cloudinary Storage (uncomment to use)
# STORAGE_BACKEND=cloudinary
# STORAGE_CLOUDINARY_CLOUD_NAME=your-cloud-name
# STORAGE_CLOUDINARY_API_KEY=your-api-key
# STORAGE_CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration
# Options: console, smtp, sendgrid
EMAIL_BACKEND=console
EMAIL_FROM_ADDRESS=noreply@openadopt.org
EMAIL_FROM_NAME=OpenAdopt

# SMTP Email (uncomment to use)
# EMAIL_BACKEND=smtp
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USERNAME=your-email@gmail.com
# EMAIL_SMTP_PASSWORD=your-app-password
# EMAIL_SMTP_USE_TLS=true

# SendGrid Email (uncomment to use)
# EMAIL_BACKEND=sendgrid
# EMAIL_SENDGRID_API_KEY=your-sendgrid-api-key

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes